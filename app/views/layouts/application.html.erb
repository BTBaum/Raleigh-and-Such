                    </li>
                    <li>
                        <!-- <a class="page-scroll" href="#photo-album">Photo Album</a> -->
                        <%= link_to 'Photo Album', '#photo-album' %>
                    </li>
                    <li>
                        <!-- <a class="page-scroll" href="#contact">Contact</a> -->
