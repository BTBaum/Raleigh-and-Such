<div class="page-header">
<h1>Listing Posts</h1>
</div>

<table class="table table-hover" id="posts" data-url="<%= posts_path(format: 'js') %>">
  <thead>
    <tr>
      
      <th class="title">Title</th>
      <th class="body">Body</th>
      <th class="published">Published</th>
    </tr>
  </thead>



  <tbody>
    <%= render @posts%>
  </tbody>
</table>
          
